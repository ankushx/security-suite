<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MiniOrange_SecuritySuite::css/adminSettings.css"/>
    </head>
  <body>
        <!--
            Defining our block and phtml file for Attribute/Mapping settings.
            Calls our Admin Block for some common functionality.
            -->
        <referenceContainer name="content">

            <block class="Magento\Framework\View\Element\Template"
                   name="miniorange.securitysuite.admin.upgrade"
                   template="MiniOrange_SecuritySuite::Upgrade/upgrade.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">MiniOrange\SecuritySuite\ViewModel\Adminhtml\Configure</argument>
                </arguments>
            </block>
        </referenceContainer>
        <!--
            Defining our block and phtml file for adding common
            javascript file to all of our pages
            -->

    </body>
</page>
